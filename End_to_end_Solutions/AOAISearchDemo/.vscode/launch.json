{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Data service: Launch & Attach server",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "cwd": "${workspaceFolder}/app",
            "env": {
                "FLASK_APP": "data/app.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "-p 5001"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "envFile": "${input:dotEnvFilePath}",
            "preLaunchTask": "pip install dependencies"
        },
        {
            "name": "Backend: Launch & Attach server",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "cwd": "${workspaceFolder}/app",
            "env": {
                "FLASK_APP": "backend/app.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "-p 5000"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "envFile": "${input:dotEnvFilePath}",
            "preLaunchTask": "pip install dependencies"
        },
        {
            "name": "Backend: Launch & Attach server (No Install)",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "cwd": "${workspaceFolder}/app",
            "env": {
                "FLASK_APP": "backend/app.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "-p 5000"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "envFile": "${input:dotEnvFilePath}"
        },
        {
            "name": "Frontend: watch",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/app/frontend",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "watch"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Frontend: build",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/app/frontend",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "build"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Frontend: Launch UI From Edge",
            "request": "launch",
            "type": "msedge",
            "url": "http://localhost:5000",
            "sourceMaps": true,
            "webRoot": "${workspaceFolder}/app/frontend/src",
            "skipFiles": [
                "node_modules"
            ],
            "preLaunchTask": "Frontend: Start"
        }
    ],
    "inputs": [
        {
            "id": "dotEnvFilePath",
            "type": "command",
            "command": "azure-dev.commands.getDotEnvFilePath"
        }
    ]
}